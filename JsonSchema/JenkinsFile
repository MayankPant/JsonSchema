pipeline {
    agent { 
        docker {
            image 'docker:latest' // Docker image with Docker installed
            args '--privileged -v /var/run/docker.sock:/var/run/docker.sock' // Allows Docker commands within the container
        }
      }
       environment {
        // Define your environment variables here
        DOCKER_REGISTRY = 'hub.docker.com/repository/docker/mayankpant4512'
        DOCKER_IMAGE = 'jsonschema'
    }
      
    stages {
        stage('Build') {
            steps {
                echo "Building.."
                script {
                    docker.build("${DOCKER_REGISTRY}/${DOCKER_IMAGE}:${env.BUILD_ID}", ".")
                }
            }
        }
        
        stage('Deliver') {
            steps {
                echo 'Deliver....'
                script {
                    docker.withRegistry("https://${DOCKER_REGISTRY}") {
                        docker.image("${DOCKER_REGISTRY}/${DOCKER_IMAGE}:${env.BUILD_ID}").push()
                }
            }
        }
    }
}
}